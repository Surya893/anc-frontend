# ANC Platform Environment Configuration

# Flask
SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/anc_production
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0

# ANC System Configuration
SAMPLE_RATE=44100
CHUNK_SIZE=1024
FILTER_LENGTH=512
ALGORITHM=nlms

# Feature Extraction
MFCC_COEFFICIENTS=13
N_FFT=2048
HOP_LENGTH=512

# Model Paths
MODEL_PATH=/models/noise_classifier_sklearn.joblib
SCALER_PATH=/models/scaler_sklearn.joblib
EMERGENCY_MODEL_PATH=/models/emergency_classifier.joblib

# API Configuration
API_KEYS=your-api-key-1,your-api-key-2
API_RATE_LIMIT=100/minute
API_TIMEOUT=30

# Security
JWT_SECRET_KEY=your-jwt-secret
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_CONCURRENT_SESSIONS=100
WORKER_TIMEOUT=120
WORKER_PROCESSES=4

# Cloud Storage (AWS S3)
STORAGE_BACKEND=s3
S3_BUCKET=anc-platform-models
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Feature Flags
ENABLE_EMERGENCY_DETECTION=true
ENABLE_ADVANCED_ALGORITHMS=true
ENABLE_MULTI_CHANNEL=false
